model Language {
  id        Int      @default(autoincrement()) @id
  name      String   @unique
  tenses    Tense[]
  verbs     Verb[]
}

model Tense {
  id            Int      @default(autoincrement()) @id
  name          String   @unique
  english_name  String
  example       String
  example_verb  String
  language      Language    @relation(fields: [languageId], references: [id])
  languageId    Int
  conjugations  Conjugation[]
}

model Verb {
  id            Int      @default(autoincrement()) @id
  infinitive    String   @unique
  example       String
  rank          Int
  regular       Boolean  @default(false)
  language      Language @relation(fields: [languageId], references: [id])
  languageId    Int
  conjugations  Conjugation[]
}

model Conjugation {
  id            Int      @default(autoincrement()) @id
  pronoun       String
  finite        String   // the conjugated verb
  verb          Verb     @relation(fields: [verbId], references: [id])
  tense         Tense    @relation(fields: [tenseId], references: [id])
  verbId        Int
  tenseId       Int
  @@unique([pronoun, finite])
}
